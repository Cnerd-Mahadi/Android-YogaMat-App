<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.WelcomeActivity">

    <Button
        android:id="@+id/welcome_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        style="@style/welcome_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="75dp"
        android:text="@string/welcome_button_note"
        />


    <TextView
        android:id="@+id/welcome_label"
        style="@style/welcome_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YogaMat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/welcome_label_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_fresh_string"
        style="@style/welcome_label_detail"
        app:layout_constraintLeft_toLeftOf="@id/welcome_label"
        app:layout_constraintTop_toBottomOf="@id/welcome_label" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/welcome_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tintMode="multiply"
        tools:srcCompat="@drawable/welcome_image"
        app:tint="@color/background" />


</androidx.constraintlayout.widget.ConstraintLayout>
